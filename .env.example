# Microsoft Identity Platform Configuration
MSAL_CLIENT_ID=your-client-id
MSAL_TENANT_ID=your-tenant-id
MSAL_REDIRECT_URI=http://localhost:3000/auth/redirect
MSAL_POST_LOGOUT_REDIRECT_URI=http://localhost:3000

# Server Configuration
NODE_ENV=development

# JIRA Integration Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-api-token
JIRA_PROJECT_KEY=PROJECT
JIRA_ENABLED=true

# Demo Mode Configuration
DEMO_MODE=true

# Azure AD Configuration (Optional - only needed for production auth)
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_TENANT_ID=your-azure-tenant-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_REDIRECT_URI=https://your-app.vercel.app/auth/redirect

# Database Configuration (Optional - demo mode works without database)
MONGO_URI=mongodb://localhost:27017
MONGO_DB=project_management

# Email Configuration (Optional - demo mode simulates emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# JIRA Configuration (Optional - demo mode uses mock data)
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=DEMO
JIRA_ENABLED=false

# Security
JWT_SECRET=your-jwt-secret-key

# Application URL
APP_URL=https://your-app.vercel.app